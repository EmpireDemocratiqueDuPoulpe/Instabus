<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/picture_holder_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="@string/post_image_alt"
        android:scaleType="centerCrop"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/picture_holder_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/picture_holder_img"
        app:layout_constraintRight_toRightOf="@id/picture_holder_img"
        app:layout_constraintBottom_toBottomOf="@id/picture_holder_img"
        app:layout_constraintLeft_toLeftOf="@id/picture_holder_img"
        android:indeterminate="true"
        android:visibility="visible"/>

</merge>